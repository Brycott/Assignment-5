
  <div class="card w-100 d-flex">
    <div class="card-header">
      <div class="d-flex justify-content-between fs-5">
        <strong class="d-flex">Quote  <% if quote.year.present? %>
                <p class="card-text ms-2">  (<%= quote.year %>)</p>
              <% end %></strong>
        <p class="card-text flex-end fs-5"><strong><%= quote.votes_count %></strong></p>
      </div>
    </div>
    <div class="card-body w-100">
      <h5 class="card-title"><%= quote.saying %></h5>
      <p class="card-text">-- <%= quote.said_by %></p>
      <div class="d-flex gap-2">
        <%= link_to "Edit", edit_quote_path(quote), class: 'btn btn-primary bi-trash3' %>

        <%= link_to 'vote', vote_quote_path(quote, type: 'upvote'), method: :post, class: 'btn btn-success bi-hand-thumbs-up ' %>

      
      <%= button_to "Delete", quote, method: :delete, class: 'btn btn-danger bi-trash3', data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
