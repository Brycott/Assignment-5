<div class="container">
  <h1 class="bi bi-chat-square-quote-fill text-primary text-center display-1"></h1>
      <p style="color: green"><%= notice %></p>

      <div class="d-flex justify-content-between">
      <h1 class="text-primary">Quotes</h1>
  <div class=" d-flex align-items-center">
      <%= link_to url_for(sort_by: 'year') do %>
      <button class="btn border-1 border-primary text-primary me-2 fw-semibold"> <i class="bi bi-sort-numeric-down"></i>Sort by Year</button>
    <% end %>

    <%= link_to url_for(sort_by: 'said_by') do %>
      <button class="btn border-1 border-primary text-primary me-2 fw-semibold"> <i class="bi bi-sort-down-alt"></i>Sort by Said By</button>
    <% end %>

    <%= link_to url_for(sort_by: 'saying') do %>
      <button class="btn border-1 border-primary text-primary me-2 fw-semibold"> <i class="bi bi-sort-down-alt"></i> Sort by Saying</button>
    <% end %>

      <%= link_to new_quote_path, class: "btn btn-primary h-75" do %>
      <i class="bi bi-plus"></i> New Quote
      <% end %>
      </div>
</div>
      <hr>
       <% if @quotes.any? %>
    <div class="row">
      <% @quotes.each do |quote| %>
        <div>
          <%= render partial: 'quote', locals: { quote: quote } %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Nothing to show.</p>
  <% end %>
</div>

<footer class="container">
  <p class="bg-dark text-white text-center footer mt-5"> &copy All rights reserved - WEB 3200 - 2024</p>
  </footer>
