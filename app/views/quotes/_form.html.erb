<div class="container">
  <%= form_with(model: quote) do |form| %>
    <% if quote.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

        <ul>
          <% quote.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :saying, class: "form-label" %>
      <%= form.text_field :saying, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :said_by, class: "form-label" %>
      <%= form.text_field :said_by, class: "form-control" %>
    </div>

    <div class="mb-3">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :notes %>
    <%= form.rich_text_area :notes, class: "form-control" %>
  </div>

    <div class="mt-3">
      <%= form.submit "Update Quote", class: "btn btn-primary" %>
      <%= link_to "Cancel", quotes_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

  <!-- Footer -->
